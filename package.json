{
  "name": "ng-unit",
  "version": "0.2.0",
  "description": "Testing utilities for Angular",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/nbeach/ng-unit.git"
  },
  "author": "Nicholas Beach <nicholas.c.beach@gmail.com> (http://nicholasbeach.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nbeach/ng-unit/issues"
  },
  "keywords": [
    "angular",
    "ng",
    "test",
    "testing",
    "mock",
    "mocking",
    "component"
  ],
  "scripts": {
    "clean": "rimraf src/**/*.js src/**/*.js.map src/**/*.d.ts",
    "build": "npm run clean && tsc",
    "release:tag": "git tag $(node -p -e \"require('./package.json').version\") && git push origin --tags",
    "release": "npm test && npm run build && npm run release:tag && npm publish",
    "test": "mocha --opts mocha.opts && yarn lint",
    "test:watch": "mocha --opts mocha.opts --watch --reporter progress",
    "test:coverage": "nyc mocha --opts mocha.opts --reporter progress",
    "test:v4": "./v4-test.sh",
    "lint": "tslint --project .",
    "ci": "yarn test:coverage && yarn lint && yarn test:v4 && nyc report --reporter=text-lcov | coveralls "
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.spec.ts",
      "src/index.ts"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  },
  "devDependencies": {
    "@angular/common": "^5.2.9",
    "@angular/compiler": "^5.2.9",
    "@angular/core": "^5.2.9",
    "@angular/forms": "^5.2.9",
    "@angular/platform-browser": "^5.2.9",
    "@angular/platform-browser-dynamic": "^5.2.9",
    "@types/chai": "^4.0.4",
    "@types/chai-dom": "0.0.6",
    "@types/lodash": "^4.14.74",
    "@types/mocha": "^5.0.0",
    "@types/node": "^9.6.4",
    "@types/sinon": "^4.3.1",
    "@types/sinon-chai": "^2.7.29",
    "chai": "^4.1.2",
    "chai-dom": "^1.5.0",
    "core-js": "^2.5.1",
    "coveralls": "^3.0.0",
    "jsdom": "^11.2.0",
    "mocha": "^5.0.5",
    "mocha-where": "^1.0.3",
    "nyc": "^11.6.0",
    "rimraf": "^2.6.2",
    "rxjs": "^5.4.3",
    "sinon-chai": "^3.0.0",
    "ts-helpers": "^1.1.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-no-unused-expression-chai": "^0.1.3",
    "typescript": "^2.8.1",
    "zone.js": "^0.8.17"
  },
  "dependencies": {
    "dom-create-element-query-selector": "^1.0.5",
    "function-composition": "^1.0.5",
    "lodash": "^4.17.4",
    "reflect-metadata": "^0.1.12",
    "sinon": "^4.0.1"
  },
  "peerDependencies": {
    "@angular/core": ">= 4.4.7"
  }
}
